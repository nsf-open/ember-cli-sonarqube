{
  "name": "@nsf-open/ember-cli-sonarqube-workspace",
  "private": true,
  "description": "Sonarqube analysis integration for Ember projects.",
  "repository": "https://bitbucket.nsf.gov/projects/NSF-FE/repos/ember-cli-sonarqube",
  "author": "National Science Foundation",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "test-packages/*"
  ],
  "scripts": {
    "test": "jest --runInBand",
    "test:coverage": "nyc --clean jest --runInBand --collectCoverage=true"
  },
  "devDependencies": {
    "execa": "^5.1.1",
    "jest": "^28.1.0",
    "nyc": "^15.1.0"
  },
  "jest": {
    "collectCoverage": false,
    "coverageReporters": [
      "json"
    ],
    "testMatch": [
      "<rootDir>/test-packages/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "tempDirectory": "./coverage",
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "packages/ember-cli-sonarqube/index.js",
      "packages/ember-cli-sonarqube/lib/**/*.js"
    ]
  },
  "volta": {
    "node": "14.18.0",
    "npm": "8.8.0"
  }
}
